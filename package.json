{
  "name": "school-manager",
  "version": "1.0.0",
  "engines": {
    "node": "10.15.0"
  },
  "description": "Allows student to manage their classes better",
  "main": "index.js",
  "proxy": "http://localhost:8080",
  "scripts": {
    "client": "npm start --prefix client",
    "server": "nodemon server.js",
    "dev": "concurrently \"npm run client\" \"npm run server\"",
    "lint": "eslint ./",
    "server-test": "env NODE_ENV=testing nodemon --exec \"mocha -R min\"",
    "server-test-ci": "mocha --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/williamj1788/School-Manager.git"
  },
  "author": "Jacquez Williams",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/williamj1788/School-Manager/issues"
  },
  "homepage": "https://github.com/williamj1788/School-Manager#readme",
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "bcrypt": "3.0.5",
    "connect-mongo": "^3.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "mongoose": "^6.0.4"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "mocha": "^6.2.2",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.10",
    "supertest": "^4.0.2"
  },
  "mocha": {
    "spec": [
      "./**/*.test.js"
    ],
    "ignore": [
      "./node_modules/**/*.js",
      "./client/**/*.js"
    ]
  }
}
